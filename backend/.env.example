# Environment Configuration Template
# Copy this file to .env, .env.local, .env.development, or .env.production
# and fill in your actual values

NODE_ENV=development

# MongoDB Connection String
# For Local: mongodb://localhost:27017/drone-arena
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=cluster-name
MONGODB_URI=your_mongodb_connection_string_here

PORT=5000

# JWT Secret for Authentication (Use a strong, random string)
JWT_SECRET=your_jwt_secret_key_here

# MQTT Broker (Mosquitto) - Only needed for ESP32 telemetry
MQTT_BROKER=mqtt://localhost:1883
MQTT_ENABLED=false
